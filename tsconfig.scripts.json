{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "outDir": "scripts/dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": ["scripts/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src",
    "pages",
    "app",
    "components",
    "node_modules/@types/react*",
    "node_modules/@types/mdx*"
  ]
}
